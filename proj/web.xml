<?xml version="1.0" encoding="UTF-8"?>
<web-app
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
    version="3.0">

    <!-- handels static content -->
    <servlet>
        <servlet-name>default</servlet-name>
        <servlet-class>org.eclipse.jetty.servlet.DefaultServlet</servlet-class>
        <init-param>
            <param-name>dirAllowed</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>cacheControl</param-name>
            <param-value>no-cache,no-store,must-revalidate</param-value>
       </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <servlet>
    	<description>Login Page</description>
    	<display-name>Login</display-name>
    	<servlet-name>Login</servlet-name>
    	<servlet-class>servlets.Login</servlet-class>
    	<init-param>
    		<param-name>css</param-name>
    		<param-value>proj.css</param-value>
    	</init-param>
    	<init-param>
    		<param-name>js</param-name>
    		<param-value>local_ajax.js</param-value>
    	</init-param>
    	<init-param>
    		<param-name>title</param-name>
    		<param-value>Login</param-value>
    	</init-param>
    </servlet>
    
    <servlet-mapping>
    	<servlet-name>Login</servlet-name>
    	<url-pattern>/login/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
    	<description>User Splash</description>
    	<display-name>UserSplash</display-name>
    	<servlet-name>UserSplash</servlet-name>
    	<servlet-class>servlets.UserSplash</servlet-class>
    	<init-param>
    		<param-name>css</param-name>
    		<param-value>proj.css</param-value>
    	</init-param>
    	<init-param>
    		<param-name>js</param-name>
    		<param-value>local_ajax.js</param-value>
    	</init-param>
    	<init-param>
    		<param-name>title</param-name>
    		<param-value>User Splash</param-value>
    	</init-param>
    </servlet>
    <servlet-mapping>
    	<servlet-name>UserSplash</servlet-name>
    	<url-pattern>/user</url-pattern>
    </servlet-mapping>
    
    <servlet>
    	<description>Admin Splash</description>
    	<display-name>AdminSplash</display-name>
    	<servlet-name>AdminSplash</servlet-name>
    	<servlet-class>servlets.AdminSplash</servlet-class>
    	<init-param>
    		<param-name>css</param-name>
    		<param-value>proj.css</param-value>
    	</init-param>
    	<init-param>
    		<param-name>js</param-name>
    		<param-value>local_ajax.js</param-value>
    	</init-param>
    	<init-param>
    		<param-name>title</param-name>
    		<param-value>Admin Splash</param-value>
    	</init-param>
    </servlet>
    <servlet-mapping>
    	<servlet-name>AdminSplash</servlet-name>
    	<url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <security-constraint>
        <web-resource-collection>
            <url-pattern>/user/*</url-pattern>  
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name> 
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <url-pattern>/admin/*</url-pattern>    
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name> 
        </auth-constraint>
    </security-constraint>
    
    <login-config>
    	<auth-method>FORM</auth-method>
    	<realm-name>Test Realm</realm-name>
    	<form-login-config>
       		<form-login-page>/login.html</form-login-page>
       		<form-error-page>login-error.html</form-error-page>
    	</form-login-config>
  	</login-config>
  	
    <!--
    <error-page>
        <description>Missing login</description>
        <error-code>401</error-code>
        <location>/general-error.html</location>
    </error-page>
    -->
</web-app>
